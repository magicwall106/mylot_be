extends ../layout

block content
  h2 Recommendation
  hr

  .row
    p #{listRecommendation}
    table.table
      thead
        tr
          th Id
          th User
          th Result
          th Condition
          th Award
      tbody
        each val in listRecommendation
          tr
            td= val.id
            td= val.user
            td= val.result
            td= val.condition
            td= val.award
        else
          tr There no values
    a(href='/recommendation/add', style='color: #fff')
      .panel.panel-default(style='background-color: #3b5998')
        .panel-body
          |  Add Recommendation
  
